<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/night_reduced">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/enregistrer"
        tools:context="android.support.v4.app.Fragment"
        tools:ignore="MergeRootFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextYellow"
        android:text="@string/title_rec"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sheeprec"
        android:layout_marginBottom="170dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:background="@drawable/layout_corner"
        android:id="@+id/imageButton"
        android:layout_above="@+id/spinner"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/spinner"
        android:onClick="startRecording" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop recording"
        android:id="@+id/stopRecord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp"
        android:onClick="stopRecording"
        android:layout_alignParentEnd="true"
        android:background="@drawable/layout_corner"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play record"
        android:id="@+id/playRecord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="startPlaying"
        android:layout_toStartOf="@+id/textView"
        android:background="@drawable/layout_corner"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop playing"
        android:id="@+id/stropPlayingRecord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="stopPlaying"
        android:background="@drawable/layout_corner"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />


</RelativeLayout>